import psycopg2

def __init__(self):
    conn = None
    cur = None
	try:
	    conn = psycopg2.connect("dbname=madlib user=dominovaldano port=15432")
	    cur = conn.cursor()

	except (Exception, psycopg2.DatabaseError) as error:
	    print(error)
	    if cur is not None:
	    	cur.close()
	    if conn is not None:
			conn.close()
	else:
		self.conn = conn
		self.cur = cur


def error(message):
    raise PLPYException(message)

def execute(query):
    self.cur.execute(query)

def warning(message):
    print message

def info(message):
    print message


class PLPYException(Exception):
    def __init__(self, message):
        super(PLPYException, self).__init__()
        self.message = message

    def __str__(self):
        return repr(self.message)

